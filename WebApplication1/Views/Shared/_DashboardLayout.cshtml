@using WebApplication1.Services
@inject INotificationService NotificationService

@{
    var userIdClaim = User.FindFirst("UserId");
    var userId = userIdClaim != null ? int.Parse(userIdClaim.Value) : 0;
    var notificationBadge = userId > 0 ? NotificationService.GetBadgeInfo(userId) : null;
    var fullName = User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ?? "User";
    var role = User.FindFirst("Role")?.Value ?? "";
    
    // Pass data to the header partial via ViewBag
    ViewBag.NotificationBadge = notificationBadge;
    ViewBag.FullName = fullName;
    ViewBag.Role = role;
    ViewBag.UserInitial = fullName.Substring(0, 1).ToUpper();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/shared-theme.css" />
    <link rel="stylesheet" href="~/css/views-override.css" />
    <link rel="stylesheet" href="~/css/dashboard-layout.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-brand"><i class="bi bi-mortarboard-fill me-2"></i>SCMS</div>
        <nav class="sidebar-nav">
            @RenderSection("SidebarMenu", required: false)
        </nav>
    </div>
    <div class="main-content">
        @await Html.PartialAsync("_DashboardHeader")
        <div class="content-area">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
