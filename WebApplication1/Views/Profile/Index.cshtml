@model WebApplication1.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Personal Information";
    ViewData["PageTitle"] = "Personal Information";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .profile-container {
        max-width: 800px;
        margin: 0 auto;
    }
    
    .profile-header {
        text-align: center;
        margin-bottom: 2rem;
    }
    
    .profile-header h2 {
        color: #1e3a5f;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    
    .profile-header p {
        color: #718096;
    }
    
    .profile-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        overflow: hidden;
    }
    
    .profile-avatar-section {
        background: linear-gradient(135deg, #1e3a5f 0%, #2d9e8e 100%);
        padding: 2rem;
        text-align: center;
        color: white;
    }
    
    .profile-avatar {
        width: 120px;
        height: 120px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        border: 4px solid rgba(255, 255, 255, 0.3);
    }
    
    .profile-name {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }
    
    .profile-role {
        font-size: 0.95rem;
        opacity: 0.9;
    }
    
    .profile-body {
        padding: 2rem;
    }
    
    .info-group {
        margin-bottom: 1.5rem;
    }
    
    .info-label {
        font-weight: 600;
        color: #4a5568;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }
    
    .info-value {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: #f7fafc;
        border-radius: 8px;
        border: 2px solid #e2e8f0;
        color: #2d3748;
        font-size: 0.95rem;
    }
    
    .info-value i {
        color: #2d9e8e;
        font-size: 1.1rem;
    }
    
    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 2px solid #e2e8f0;
    }
    
    .btn-edit {
        flex: 1;
    }
</style>

<div class="profile-container">
    <div class="profile-header">
        <h2>Personal Information</h2>
        <p>Manage your personal information</p>
    </div>
    
    <div class="profile-card">
        <div class="profile-avatar-section">
            <div class="profile-avatar">
                @Model.FullName.Substring(0, 1).ToUpper()
            </div>
            <div class="profile-name">@Model.FullName</div>
            <div class="profile-role">@Model.Role</div>
        </div>
        
        <div class="profile-body">
            <div class="info-group">
                <div class="info-label">Full Name</div>
                <div class="info-value">
                    <i class="bi bi-person"></i>
                    <span>@Model.FullName</span>
                </div>
            </div>
            
            <div class="info-group">
                <div class="info-label">Email Address</div>
                <div class="info-value">
                    <i class="bi bi-envelope"></i>
                    <span>@Model.Email</span>
                </div>
            </div>
            
            <div class="info-group">
                <div class="info-label">Account ID</div>
                <div class="info-value">
                    <i class="bi bi-credit-card"></i>
                    <span>@Model.AccountId</span>
                </div>
            </div>
            
            <div class="info-group">
                <div class="info-label">Role</div>
                <div class="info-value">
                    <i class="bi bi-shield-check"></i>
                    <span>@Model.Role</span>
                </div>
            </div>
            
            @if (Model.Role == "Student" && !string.IsNullOrEmpty(Model.StudentCode))
            {
                <div class="info-group">
                    <div class="info-label">Major</div>
                    <div class="info-value">
                        <i class="bi bi-book"></i>
                        <span>@Model.Major</span>
                    </div>
                </div>
                
                <div class="info-group">
                    <div class="info-label">Admission Year</div>
                    <div class="info-value">
                        <i class="bi bi-calendar"></i>
                        <span>@Model.AdmissionYear</span>
                    </div>
                </div>
            }
            
            @if (Model.Role == "Lecturer" && !string.IsNullOrEmpty(Model.LecturerCode))
            {
                <div class="info-group">
                    <div class="info-label">Department</div>
                    <div class="info-value">
                        <i class="bi bi-building"></i>
                        <span>@Model.Department</span>
                    </div>
                </div>
                
                <div class="info-group">
                    <div class="info-label">Specialization</div>
                    <div class="info-value">
                        <i class="bi bi-star"></i>
                        <span>@Model.Specialization</span>
                    </div>
                </div>
            }
            
            <div class="action-buttons">
                <a asp-action="ChangePassword" class="btn btn-primary btn-edit">
                    <i class="bi bi-key me-2"></i>
                    Change Password
                </a>
            </div>
        </div>
    </div>
</div>
