@{
    ViewData["Title"] = "Access Denied";
    Layout = "_PublicLayout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0" style="border-radius: 15px;">
            <div class="card-body p-5 text-center">
                <div class="mb-4">
                    <i class="bi bi-shield-exclamation" style="font-size: 5rem; color: #ef4444;"></i>
                </div>
                <h2 class="mb-3" style="color: #ef4444;">Access Denied</h2>
                <p class="text-muted mb-4">
                    You do not have permission to access this page.<br>
                    Please contact the administrator if you need assistance.
                </p>
                <div class="d-grid gap-2">
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house me-2"></i>Go to Home
                    </a>
                    <form asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
