@model WebApplication1.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_PublicLayout";
}

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 200px);
    }
    
    .auth-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr;
        max-width: 1100px;
        width: 100%;
        gap: 3rem;
        align-items: center;
    }
    
    .auth-left {
        color: white;
        padding: 2rem;
    }
    
    .auth-left .logo {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }
    
    .auth-left .logo-icon {
        width: 60px;
        height: 60px;
        background: rgba(45, 158, 142, 0.3);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
    }
    
    .auth-left .logo-text h3 {
        margin: 0;
        font-weight: 700;
        font-size: 1.5rem;
    }
    
    .auth-left .logo-text p {
        margin: 0;
        font-size: 0.9rem;
        opacity: 0.9;
    }
    
    .auth-left h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }
    
    .auth-left .features {
        margin-top: 2rem;
    }
    
    .feature-item {
        background: rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .feature-item i {
        color: #2d9e8e;
        font-size: 1.25rem;
    }
    
    .auth-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        animation: fadeInUp 0.6s ease;
    }
    
    .auth-card h2 {
        color: #1e3a5f;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
    .auth-card .subtitle {
        color: #718096;
        margin-bottom: 2rem;
    }
    
    .form-label {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }
    
    .input-group {
        margin-bottom: 1rem;
    }
    
    .input-group-text {
        background: #f7fafc;
        border: 2px solid #e2e8f0;
        border-right: none;
        color: #718096;
    }
    
    .form-control {
        border: 2px solid #e2e8f0;
        border-left: none;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
    }
    
    .form-control:focus {
        border-color: #2d9e8e;
        box-shadow: none;
    }
    
    .form-control:focus + .input-group-text,
    .input-group-text:has(+ .form-control:focus) {
        border-color: #2d9e8e;
    }
    
    .form-check-label {
        color: #4a5568;
        font-size: 0.85rem;
    }
    
    .form-check-input:checked {
        background-color: #2d9e8e;
        border-color: #2d9e8e;
    }
    
    .btn-auth {
        background: #1e3a5f;
        color: white;
        border: none;
        padding: 0.875rem;
        font-weight: 600;
        border-radius: 10px;
        width: 100%;
        transition: all 0.3s ease;
    }
    
    .btn-auth:hover {
        background: #163354;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(30, 58, 95, 0.3);
    }
    
    .login-link {
        text-align: center;
        margin-top: 1.5rem;
        color: #4a5568;
        font-size: 0.9rem;
    }
    
    .login-link a {
        color: #1e3a5f;
        font-weight: 600;
        text-decoration: none;
    }
    
    .login-link a:hover {
        color: #2d9e8e;
    }
    
    @@media (max-width: 968px) {
        .auth-wrapper {
            grid-template-columns: 1fr;
        }
        
        .auth-left {
            display: none;
        }
    }
</style>

<div class="auth-container">
    <div class="auth-wrapper">
        <!-- Left Side - Info -->
        <div class="auth-left">
            <div class="logo">
                <div class="logo-icon">
                    <i class="bi bi-mortarboard-fill"></i>
                </div>
                <div class="logo-text">
                    <h3>SCMS</h3>
                    <p>Student Portal</p>
                </div>
            </div>
            
            <h1>Join SCMS<br/>Today</h1>
            
            <p style="font-size: 1.05rem; opacity: 0.95; margin-bottom: 2rem;">
                Register a student account to access the comprehensive academic management system.
            </p>
            
            <div class="features">
                <div class="feature-item">
                    <i class="bi bi-check-circle-fill"></i>
                    <span>View class schedules and timetables</span>
                </div>
                <div class="feature-item">
                    <i class="bi bi-check-circle-fill"></i>
                    <span>Register for courses online</span>
                </div>
                <div class="feature-item">
                    <i class="bi bi-check-circle-fill"></i>
                    <span>Track grades and GPA</span>
                </div>
                <div class="feature-item">
                    <i class="bi bi-check-circle-fill"></i>
                    <span>Receive instant notifications</span>
                </div>
            </div>
        </div>
        
        <!-- Right Side - Register Form -->
        <div class="auth-card">
            <h2>Create Account</h2>
            <p class="subtitle">Create a new student account</p>
            
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input asp-for="FullName" class="form-control" placeholder="Nguyen Van A" />
                    </div>
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email (@@scms.edu)</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="email@scms.edu" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" class="form-control" placeholder="At least 6 characters" type="password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter password" type="password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="termsCheck" required />
                    <label class="form-check-label" for="termsCheck">
                        I agree to the <a href="#" class="text-decoration-none">Terms of Service</a> and <a href="#" class="text-decoration-none">Privacy Policy</a>
                    </label>
                </div>

                <button type="submit" class="btn btn-auth">
                    Sign Up <i class="bi bi-arrow-right ms-2"></i>
                </button>
                
                <div class="login-link">
                    Already have an account? <a asp-action="Login">Sign in now</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
