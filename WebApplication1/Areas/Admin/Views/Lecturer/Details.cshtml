@model WebApplication1.ViewModels.LecturerDetailViewModel
@{
    ViewData["Title"] = "Lecturer Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card">
    <div class="card-header">Lecturer Details</div>
    <div class="card-body">
        <p><strong>Code:</strong> @Model.LecturerCode</p>
        <p><strong>Name:</strong> @Model.FullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Department:</strong> @Model.Department</p>
        <h6>Teaching Classes</h6>
        @if (Model.TeachingClasses.Any())
        {
            <ul>
                @foreach (var c in Model.TeachingClasses)
                {
                    <li>@c.ClassCode - @c.SubjectName (@c.Semester)</li>
                }
            </ul>
        }
        else
        {
            <div class="alert alert-info">No classes assigned</div>
        }
    </div>
</div>