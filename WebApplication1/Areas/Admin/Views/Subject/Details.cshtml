@model WebApplication1.ViewModels.SubjectDetailViewModel
@{
    ViewData["Title"] = "Subject Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card">
    <div class="card-header">Subject Details</div>
    <div class="card-body">
        <p><strong>Code:</strong> @Model.SubjectCode</p>
        <p><strong>Name:</strong> @Model.SubjectName</p>
        <p><strong>Credits:</strong> @Model.Credits</p>
        <p><strong>Department:</strong> @Model.Department</p>
        <p><strong>Prerequisites:</strong></p>
        @if (Model.PrerequisiteSubjects.Any())
        {
            <ul>
                @foreach (var p in Model.PrerequisiteSubjects)
                {
                    <li>@p</li>
                }
            </ul>
        }
        else
        {
            <div class="alert alert-info">No prerequisites</div>
        }
    </div>
</div>