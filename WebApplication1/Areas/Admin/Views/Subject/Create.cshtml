@model WebApplication1.ViewModels.SubjectFormViewModel
@{
    ViewData["Title"] = "Create Subject";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h4>Create Subject</h4>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="SubjectCode" class="form-label"></label>
        <input asp-for="SubjectCode" class="form-control" />
        <span asp-validation-for="SubjectCode" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SubjectName" class="form-label"></label>
        <input asp-for="SubjectName" class="form-control" />
        <span asp-validation-for="SubjectName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Credits" class="form-label"></label>
        <input asp-for="Credits" class="form-control" type="number" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Department" class="form-label"></label>
        <input asp-for="Department" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label>Prerequisites</label>
        <select asp-for="PrerequisiteSubjectIds" class="form-select" multiple>
            @foreach (var s in (ViewBag.AllSubjects as List<WebApplication1.ViewModels.SubjectListViewModel> ?? new List<WebApplication1.ViewModels.SubjectListViewModel>()))
            {
                <option value="@s.Id">@s.SubjectCode - @s.SubjectName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>