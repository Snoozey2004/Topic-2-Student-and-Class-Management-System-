@model WebApplication1.ViewModels.CourseClassFormViewModel
@{
    ViewData["Title"] = "Create Course Class";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h4>Create Course Class</h4>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ClassCode" class="form-label"></label>
        <input asp-for="ClassCode" class="form-control" />
        <span asp-validation-for="ClassCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SubjectId" class="form-label"></label>
        <select asp-for="SubjectId" class="form-select">
            <option value="">-- Select Subject --</option>
            @foreach (var s in (ViewBag.Subjects as List<WebApplication1.ViewModels.SubjectListViewModel> ?? new List<WebApplication1.ViewModels.SubjectListViewModel>()))
            {
                <option value="@s.Id">@s.SubjectCode - @s.SubjectName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="LecturerId" class="form-label"></label>
        <select asp-for="LecturerId" class="form-select">
            <option value="">-- Select Lecturer --</option>
            @foreach (var l in (ViewBag.Lecturers as List<WebApplication1.ViewModels.LecturerListViewModel> ?? new List<WebApplication1.ViewModels.LecturerListViewModel>()))
            {
                <option value="@l.Id">@l.LecturerCode - @l.FullName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Semester" class="form-label"></label>
        <input asp-for="Semester" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="MaxStudents" class="form-label"></label>
        <input asp-for="MaxStudents" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label asp-for="Room" class="form-label"></label>
        <input asp-for="Room" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<WebApplication1.Models.CourseClassStatus>()"></select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>