@model List<WebApplication1.ViewModels.CourseClassListViewModel>
@{
    ViewData["Title"] = "Course Class Management";
    ViewData["PageTitle"] = "Course Class Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_AdminSidebar")
}

<div class="card">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-journal-text me-2"></i>Course Classes</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Class Code</th>
                            <th>Subject</th>
                            <th>Lecturer</th>
                            <th>Room</th>
                            <th>Capacity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cc in Model)
                        {
                            <tr>
                                <td>@cc.ClassCode</td>
                                <td>@cc.SubjectName</td>
                                <td>@cc.LecturerName</td>
                                <td>@cc.Room</td>
                                <td>@cc.MaxStudents</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-0">No course classes found</div>
        }
    </div>
</div>