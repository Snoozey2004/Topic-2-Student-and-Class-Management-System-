@{
    ViewData["Title"] = "Dashboard";
    ViewData["PageTitle"] = "System Overview";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_AdminSidebar")
}

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card text-white" style="background: var(--bg-sidebar);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0 text-white-50">Total Users</h6>
                        <h2 class="mb-0 mt-2">@ViewBag.TotalUsers</h2>
                    </div>
                    <i class="bi bi-people" style="font-size: 3rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white" style="background: var(--bg-sidebar);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0 text-white-50">Students</h6>
                        <h2 class="mb-0 mt-2">@ViewBag.TotalStudents</h2>
                    </div>
                    <i class="bi bi-person-badge" style="font-size: 3rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white" style="background: var(--bg-sidebar);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0 text-white-50">Lecturers</h6>
                        <h2 class="mb-0 mt-2">@ViewBag.TotalLecturers</h2>
                    </div>
                    <i class="bi bi-person-workspace" style="font-size: 3rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white" style="background: var(--bg-sidebar);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0 text-white-50">Subjects</h6>
                        <h2 class="mb-0 mt-2">@ViewBag.TotalSubjects</h2>
                    </div>
                    <i class="bi bi-book" style="font-size: 3rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-clipboard-check me-2"></i>Pending Enrollments</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h3 class="mb-0">@ViewBag.PendingEnrollments</h3>
                        <p class="text-muted mb-0">enrollments awaiting approval</p>
                    </div>
                    <a asp-area="Admin" asp-controller="Enrollment" asp-action="Index" asp-route-status="Pending" class="btn btn-primary">
                        View Details <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-journal-text me-2"></i>Course Classes</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h3 class="mb-0">@ViewBag.TotalCourseClasses</h3>
                        <p class="text-muted mb-0">active course classes</p>
                    </div>
                    <a asp-area="Admin" asp-controller="CourseClass" asp-action="Index" class="btn btn-primary">
                        Manage Classes <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-activity me-2"></i>Recent Activities</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Recent activity tracking feature is under development
                </div>
            </div>
        </div>
    </div>
</div>
