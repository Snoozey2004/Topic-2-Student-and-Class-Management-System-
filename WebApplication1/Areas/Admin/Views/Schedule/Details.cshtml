@model WebApplication1.ViewModels.ScheduleDetailViewModel
@{
    ViewData["Title"] = "Schedule Details";
    ViewData["PageTitle"] = "Schedule Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_AdminSidebar")
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-crud.css" />
}

<a asp-action="Index" class="admin-back-link">
    <i class="bi bi-arrow-left"></i> Back to Schedule List
</a>

<div class="row">
    <div class="col-lg-8">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5><i class="bi bi-calendar3"></i> Schedule Details</h5>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-admin-outline btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn-admin-danger btn-sm">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
            <div class="admin-card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="admin-detail-row">
                            <div class="admin-detail-label">Course Class</div>
                            <div class="admin-detail-value">
                                <span class="badge-admin badge-admin-primary">@Model.ClassCode</span>
                            </div>
                        </div>
                        <div class="admin-detail-row">
                            <div class="admin-detail-label">Subject</div>
                            <div class="admin-detail-value"><strong>@Model.SubjectName</strong></div>
                        </div>
                        <div class="admin-detail-row">
                            <div class="admin-detail-label">Lecturer</div>
                            <div class="admin-detail-value">@Model.LecturerName</div>
                        </div>
                        <div class="admin-detail-row">
                            <div class="admin-detail-label">Room</div>
                            <div class="admin-detail-value">
                                <i class="bi bi-door-open me-1"></i>@Model.Room
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="admin-detail-row">
                            <div class="admin-detail-label">Day</div>
                            <div class="admin-detail-value">
                                <span class="badge-admin badge-admin-accent">@Model.DayOfWeek</span>
                            </div>
                        </div>
                        <div class="admin-detail-row">
                            <div class="admin-detail-label">Session / Period</div>
                            <div class="admin-detail-value">@Model.Session - Period @Model.Period</div>
                        </div>
                        <div class="admin-detail-row">
                            <div class="admin-detail-label">Time</div>
                            <div class="admin-detail-value">
                                <i class="bi bi-clock me-1"></i>@Model.StartTime - @Model.EndTime
                            </div>
                        </div>
                        <div class="admin-detail-row">
                            <div class="admin-detail-label">Effective</div>
                            <div class="admin-detail-value">
                                @Model.EffectiveDate.ToString("dd/MM/yyyy")
                                @if (Model.EndDate.HasValue)
                                {
                                    <span> ? @Model.EndDate.Value.ToString("dd/MM/yyyy")</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5><i class="bi bi-info-circle"></i> Period Info</h5>
            </div>
            <div class="admin-card-body">
                <div class="small">
                    <div class="d-flex justify-content-between py-2 border-bottom">
                        <span><strong>Period 1-3</strong></span>
                        <span class="text-muted">07:00 - 09:30</span>
                    </div>
                    <div class="d-flex justify-content-between py-2 border-bottom">
                        <span><strong>Period 4-6</strong></span>
                        <span class="text-muted">09:45 - 12:15</span>
                    </div>
                    <div class="d-flex justify-content-between py-2">
                        <span><strong>Period 7-9</strong></span>
                        <span class="text-muted">13:00 - 15:30</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
