@model WebApplication1.ViewModels.StudentDetailViewModel
@{
    ViewData["Title"] = "Student Details";
    ViewData["PageTitle"] = "Student Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_AdminSidebar")
}

<div class="card">
    <div class="card-header">Student Details</div>
    <div class="card-body">
        <p><strong>Code:</strong> @Model.StudentCode</p>
        <p><strong>Name:</strong> @Model.FullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Major:</strong> @Model.Major</p>
        <p><strong>Admission Year:</strong> @Model.AdmissionYear</p>
        <p><strong>Administrative Class:</strong> @Model.AdministrativeClassName</p>
        <p><strong>GPA:</strong> @(Model.GPA?.ToString("0.00") ?? "-")</p>

        <h6>Enrollments</h6>
        @if (Model.Enrollments.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Subject</th>
                        <th>Class</th>
                        <th>Semester</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Letter</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model.Enrollments)
                    {
                        <tr>
                            <td>@e.SubjectName</td>
                            <td>@e.ClassCode</td>
                            <td>@e.Semester</td>
                            <td>@e.Status</td>
                            <td>@(e.TotalScore?.ToString("0.00") ?? "-")</td>
                            <td>@(e.LetterGrade ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">No enrollments</div>
        }
    </div>
</div>