@model List<WebApplication1.ViewModels.StudentListViewModel>
@{
    ViewData["Title"] = "Student Management";
    ViewData["PageTitle"] = "Student Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_AdminSidebar")
}

<div class="card">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-list me-2"></i>Student List</h5>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Add Student
        </a>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Student Code</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Major</th>
                            <th>Admission Year</th>
                            <th>Administrative Class</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td><span class="badge bg-primary">@student.StudentCode</span></td>
                                <td><strong>@student.FullName</strong></td>
                                <td>@student.Email</td>
                                <td>@student.Major</td>
                                <td>@student.AdmissionYear</td>
                                <td>@(student.AdministrativeClassName ?? "Not Assigned")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle me-2"></i>No students in the system yet
            </div>
        }
    </div>
</div>
