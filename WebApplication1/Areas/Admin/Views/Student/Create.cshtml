@model WebApplication1.ViewModels.StudentFormViewModel
@{
    ViewData["Title"] = "Create Student";
    ViewData["PageTitle"] = "Create Student";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_AdminSidebar")
}

@{ var adminClasses = (ViewBag.AdministrativeClasses as List<WebApplication1.Models.AdministrativeClass>) ?? new List<WebApplication1.Models.AdministrativeClass>(); }

<h4>Create Student</h4>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="StudentCode" class="form-label"></label>
        <input asp-for="StudentCode" class="form-control" />
        <span asp-validation-for="StudentCode" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label"></label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="AdministrativeClassId" class="form-label"></label>
        <select asp-for="AdministrativeClassId" class="form-select">
            <option value="">-- None --</option>
            @foreach (var c in adminClasses)
            {
                <option value="@c.Id">@c.ClassName</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Major" class="form-label"></label>
        <input asp-for="Major" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="AdmissionYear" class="form-label"></label>
        <input asp-for="AdmissionYear" class="form-control" type="number" />
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>