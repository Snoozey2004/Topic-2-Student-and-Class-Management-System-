@model List<WebApplication1.ViewModels.GradeListViewModel>
@{
    ViewData["Title"] = "Grade Management";
    ViewData["PageTitle"] = "Grade Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_AdminSidebar")
}

<div class="card">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-award me-2"></i>Grades</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Course Class</th>
                            <th>Total</th>
                            <th>Letter</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var g in Model)
                        {
                            <tr>
                                <td>@g.StudentName</td>
                                <td>@g.CourseClassCode</td>
                                <td>@(g.TotalScore?.ToString("0.00") ?? "-")</td>
                                <td>@(g.LetterGrade ?? "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-0">No grades found</div>
        }
    </div>
</div>