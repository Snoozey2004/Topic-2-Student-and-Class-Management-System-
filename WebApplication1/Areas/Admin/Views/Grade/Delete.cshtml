@model WebApplication1.ViewModels.GradeListViewModel
@{
    ViewData["Title"] = "Delete Grade";
    ViewData["PageTitle"] = "Delete Grade";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_AdminSidebar")
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-crud.css" />
}

<a asp-action="Index" class="admin-back-link">
    <i class="bi bi-arrow-left"></i> Back to Grade List
</a>

<div class="admin-card">
    <div class="admin-card-header">
        <h5><i class="bi bi-trash"></i> Delete Grade</h5>
    </div>
    <div class="admin-card-body">
        <div class="admin-delete-warning">
            <i class="bi bi-exclamation-triangle" style="font-size: 1.25rem;"></i>
            <span>Are you sure you want to delete this grade? This action cannot be undone.</span>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="admin-detail-row">
                    <div class="admin-detail-label">Student</div>
                    <div class="admin-detail-value"><strong>@Model.StudentName</strong></div>
                </div>
                <div class="admin-detail-row">
                    <div class="admin-detail-label">Course Class</div>
                    <div class="admin-detail-value">
                        <span class="badge-admin badge-admin-accent">@Model.CourseClassCode</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="admin-detail-row">
                    <div class="admin-detail-label">Total Score</div>
                    <div class="admin-detail-value">@(Model.TotalScore?.ToString("0.00") ?? "-")</div>
                </div>
                <div class="admin-detail-row">
                    <div class="admin-detail-label">Letter Grade</div>
                    <div class="admin-detail-value">
                        @if (!string.IsNullOrEmpty(Model.LetterGrade))
                        {
                            <span class="badge-admin badge-admin-primary">@Model.LetterGrade</span>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-4">

        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn-admin-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn-admin-outline">Cancel</a>
            </div>
        </form>
    </div>
</div>
