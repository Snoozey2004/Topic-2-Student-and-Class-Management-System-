@model List<WebApplication1.ViewModels.UserListViewModel>
@{
    ViewData["Title"] = "User Management";
    ViewData["PageTitle"] = "User Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_AdminSidebar")
}

<div class="card">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-people me-2"></i>User List</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Full Name</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.FullName</td>
                                <td>@user.Role</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info"><i class="bi bi-eye"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-0">No users found</div>
        }
    </div>
</div>