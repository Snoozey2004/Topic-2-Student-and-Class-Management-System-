@model WebApplication1.ViewModels.UserFormViewModel
@{
    ViewData["Title"] = "Edit User";
    ViewData["PageTitle"] = "Edit User";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_AdminSidebar")
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-crud.css" />
}

<a asp-action="Index" class="admin-back-link">
    <i class="bi bi-arrow-left"></i> Back to User List
</a>

<div class="admin-card">
    <div class="admin-card-header">
        <h5><i class="bi bi-pencil"></i> Edit User</h5>
    </div>
    <div class="admin-card-body">
        <form asp-action="Edit" method="post" class="admin-form">
            <input type="hidden" asp-for="Id" />
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label">Email *</label>
                    <input asp-for="Email" class="form-control" placeholder="user@example.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="FullName" class="form-label">Full Name *</label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Role" class="form-label">Role *</label>
                    <select asp-for="Role" class="form-select" asp-items="Html.GetEnumSelectList<WebApplication1.Models.UserRole>()"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Status" class="form-label">Status *</label>
                    <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<WebApplication1.Models.UserStatus>()"></select>
                </div>
            </div>

            <hr class="my-4">

            <div class="d-flex gap-2">
                <button type="submit" class="btn-admin-primary">
                    <i class="bi bi-check-circle me-2"></i>Update User
                </button>
                <a asp-action="Index" class="btn-admin-outline">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}