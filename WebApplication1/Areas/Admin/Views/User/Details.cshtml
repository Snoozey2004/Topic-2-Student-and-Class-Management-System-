@model WebApplication1.Models.User
@{
    ViewData["Title"] = "User Details";
    ViewData["PageTitle"] = "User Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_AdminSidebar")
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-crud.css" />
}

<a asp-action="Index" class="admin-back-link">
    <i class="bi bi-arrow-left"></i> Back to User List
</a>

<div class="admin-card">
    <div class="admin-card-header">
        <h5><i class="bi bi-person"></i> User Details</h5>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-admin-outline btn-sm">
                <i class="bi bi-pencil me-1"></i>Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn-admin-danger btn-sm">
                <i class="bi bi-trash me-1"></i>Delete
            </a>
        </div>
    </div>
    <div class="admin-card-body">
        <div class="admin-detail-row">
            <div class="admin-detail-label">ID</div>
            <div class="admin-detail-value">@Model.Id</div>
        </div>
        <div class="admin-detail-row">
            <div class="admin-detail-label">Email</div>
            <div class="admin-detail-value">@Model.Email</div>
        </div>
        <div class="admin-detail-row">
            <div class="admin-detail-label">Full Name</div>
            <div class="admin-detail-value"><strong>@Model.FullName</strong></div>
        </div>
        <div class="admin-detail-row">
            <div class="admin-detail-label">Role</div>
            <div class="admin-detail-value">
                <span class="badge-admin badge-admin-primary">@Model.Role</span>
            </div>
        </div>
        <div class="admin-detail-row">
            <div class="admin-detail-label">Status</div>
            <div class="admin-detail-value">
                @if (Model.Status == WebApplication1.Models.UserStatus.Active)
                {
                    <span class="badge-admin badge-admin-accent">Active</span>
                }
                else
                {
                    <span class="badge-admin" style="background: rgba(220,53,69,0.1); color: #dc3545;">Inactive</span>
                }
            </div>
        </div>
        <div class="admin-detail-row">
            <div class="admin-detail-label">Created Date</div>
            <div class="admin-detail-value">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</div>
        </div>
    </div>
</div>