@{
    ViewData["Title"] = "Dashboard";
    ViewData["PageTitle"] = "Lecturer Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var lecturer = ViewBag.LecturerInfo as WebApplication1.Models.Lecturer;
}

@section SidebarMenu {
    <li class="nav-item">
        <a class="nav-link active" asp-area="Lecturer" asp-controller="Dashboard" asp-action="Index">
            <i class="bi bi-house-door me-2"></i>Home
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Lecturer" asp-controller="CourseClass" asp-action="Index">
            <i class="bi bi-journal-text me-2"></i>Course Classes
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Lecturer" asp-controller="Grade" asp-action="Index">
            <i class="bi bi-pencil-square me-2"></i>Manage Grades
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Lecturer" asp-controller="Attendance" asp-action="Index">
            <i class="bi bi-clipboard-check me-2"></i>Attendance
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Lecturer" asp-controller="Schedule" asp-action="Index">
            <i class="bi bi-calendar3 me-2"></i>Teaching Schedule
        </a>
    </li>
}

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0 text-white-50">Teaching Classes</h6>
                        <h2 class="mb-0 mt-2">@ViewBag.TeachingClasses</h2>
                    </div>
                    <i class="bi bi-journal-text" style="font-size: 3rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

@if (lecturer != null)
{
    <div class="row g-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-person-circle me-2"></i>Lecturer Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Lecturer Code</label>
                            <p class="fw-semibold">@lecturer.LecturerCode</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Full Name</label>
                            <p class="fw-semibold">@lecturer.FullName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Email</label>
                            <p class="fw-semibold">@lecturer.Email</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Title</label>
                            <p class="fw-semibold">@lecturer.Title</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Department</label>
                            <p class="fw-semibold">@lecturer.Department</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Specialization</label>
                            <p class="fw-semibold">@lecturer.Specialization</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-area="Lecturer" asp-controller="CourseClass" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-journal me-2"></i>View Course Classes
                        </a>
                        <a asp-area="Lecturer" asp-controller="Schedule" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-calendar me-2"></i>View Teaching Schedule
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
