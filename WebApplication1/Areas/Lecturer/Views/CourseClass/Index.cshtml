@model List<WebApplication1.ViewModels.CourseClassListViewModel>
@{
    ViewData["Title"] = "Course Classes";
    ViewData["PageTitle"] = "My Course Classes";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_LecturerSidebar")
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal-common.css" />
}

<div class="portal-filter-bar">
    <div class="portal-filter-controls">
        <select class="portal-select">
            <option value="">All Semesters</option>
            <option value="HK1-2024" selected>HK1-2024</option>
        </select>
    </div>
</div>

@if (Model.Any())
{
    <div class="row g-3">
        @{ var colorIndex = 0; }
        @foreach (var courseClass in Model)
        {
            colorIndex++;
            var colors = new[] { 
                ("var(--portal-accent)", "var(--portal-accent-dark)"),
                ("var(--portal-primary)", "var(--portal-primary-dark)"),
                ("#6366f1", "#4f46e5"),
                ("#8b5cf6", "#7c3aed"),
                ("#0891b2", "#0e7490")
            };
            var color = colors[(colorIndex - 1) % colors.Length];
            
            <div class="col-md-6 col-lg-4">
                <div class="portal-card h-100">
                    <div style="height: 6px; background: linear-gradient(90deg, @color.Item1, @color.Item2);"></div>
                    <div class="portal-card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h6 class="mb-1 fw-bold" style="color: var(--portal-primary);">@courseClass.SubjectName</h6>
                                <span class="portal-badge portal-badge-primary">@courseClass.ClassCode</span>
                            </div>
                            @{
                                var statusClass = courseClass.Status == "InProgress" ? "portal-badge-accent" : 
                                                  courseClass.Status == "Open" ? "portal-badge-primary" : "";
                                var statusText = courseClass.Status == "InProgress" ? "In Progress" : 
                                                courseClass.Status == "Open" ? "Open" : "Completed";
                            }
                            <span class="portal-badge @statusClass">@statusText</span>
                        </div>
                        
                        <div class="small mb-3" style="color: var(--portal-text-muted);">
                            <div class="d-flex align-items-center gap-2 mb-1">
                                <i class="bi bi-door-open"></i>
                                <span>Room: @courseClass.Room</span>
                            </div>
                            <div class="d-flex align-items-center gap-2 mb-1">
                                <i class="bi bi-people"></i>
                                <span>Students: @courseClass.CurrentStudents / @courseClass.MaxStudents</span>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-calendar3"></i>
                                <span>@courseClass.Semester</span>
                            </div>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@courseClass.Id" class="portal-btn portal-btn-outline flex-grow-1" style="font-size: 0.75rem; padding: 0.375rem 0.75rem;">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-area="Lecturer" asp-controller="Grade" asp-action="CourseClass" asp-route-id="@courseClass.Id" class="portal-btn portal-btn-accent flex-grow-1" style="font-size: 0.75rem; padding: 0.375rem 0.75rem;">
                                <i class="bi bi-award"></i> Grades
                            </a>
                            <a asp-area="Lecturer" asp-controller="Attendance" asp-action="Index" asp-route-courseClassId="@courseClass.Id" class="portal-btn portal-btn-primary flex-grow-1" style="font-size: 0.75rem; padding: 0.375rem 0.75rem;">
                                <i class="bi bi-clipboard-check"></i> Attend
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="portal-card">
        <div class="portal-empty">
            <i class="bi bi-journal-x"></i>
            <p>You have no course classes assigned</p>
        </div>
    </div>
}
