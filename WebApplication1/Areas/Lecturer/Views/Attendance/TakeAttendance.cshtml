@model WebApplication1.ViewModels.AttendanceSessionViewModel
@{
    ViewData["Title"] = "Take Attendance";
    ViewData["PageTitle"] = $"Take Attendance - {Model.ClassCode}";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_LecturerSidebar")
}

@section Styles {
    <link rel="stylesheet" href="~/css/portal-common.css" />
    <style>
        .portal-checkbox {
            width: 20px;
            height: 20px;
            cursor: pointer;
            accent-color: var(--portal-accent);
        }
        .summary-card {
            background: var(--portal-light);
            border-radius: 10px;
            padding: 1rem;
            border: 1px solid var(--portal-border);
        }
        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 0.375rem 0;
            font-size: 0.875rem;
        }
        .summary-row.present { color: var(--portal-accent); }
        .summary-row.absent { color: #dc3545; }
    </style>
}

<!-- Header -->
<div class="portal-filter-bar">
    <div>
        <h6 style="margin: 0; color: var(--portal-primary); font-weight: 600;">
            <i class="bi bi-clipboard-check me-2" style="color: var(--portal-accent);"></i>@Model.SubjectName
        </h6>
        <small style="color: var(--portal-text-muted);">Class: @Model.ClassCode</small>
    </div>
    <a asp-action="Index" class="portal-btn portal-btn-outline portal-btn-sm">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<!-- Session Info -->
<div class="portal-stats" style="margin-bottom: 1rem;">
    <div class="portal-stat-card">
        <div class="portal-stat-icon primary">
            <i class="bi bi-calendar-date"></i>
        </div>
        <div class="portal-stat-info">
            <h4 style="font-size: 1rem;">@Model.SessionDate.ToString("dd/MM/yyyy")</h4>
            <p>Date</p>
        </div>
    </div>
    <div class="portal-stat-card">
        <div class="portal-stat-icon accent">
            <i class="bi bi-clock"></i>
        </div>
        <div class="portal-stat-info">
            <h4 style="font-size: 1rem;">@Model.Session</h4>
            <p>Session</p>
        </div>
    </div>
    <div class="portal-stat-card">
        <div class="portal-stat-icon primary">
            <i class="bi bi-door-open"></i>
        </div>
        <div class="portal-stat-info">
            <h4 style="font-size: 1rem;">@Model.Room</h4>
            <p>Room</p>
        </div>
    </div>
</div>

<!-- Attendance Form -->
<form asp-action="TakeAttendance" method="post">
    <input type="hidden" asp-for="CourseClassId" />
    <input type="hidden" asp-for="SessionDate" />
    <input type="hidden" asp-for="Session" />

    <div class="row">
        <div class="col-lg-9">
            <div class="portal-card">
                <div class="portal-card-body p-0">
                    <table class="portal-grades-table">
                        <thead>
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th style="width: 120px;">Student Code</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th style="width: 100px; text-align: center;">
                                    <input type="checkbox" class="portal-checkbox" id="checkAll" checked>
                                    <label for="checkAll" style="margin-left: 0.25rem; cursor: pointer;">All</label>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Students.Count; i++)
                            {
                                <tr>
                                    <td style="text-align: center;">@(i + 1)</td>
                                    <td>
                                        <span class="portal-badge portal-badge-primary">@Model.Students[i].StudentCode</span>
                                    </td>
                                    <td><strong>@Model.Students[i].FullName</strong></td>
                                    <td><small style="color: var(--portal-text-muted);">@Model.Students[i].Email</small></td>
                                    <td style="text-align: center;">
                                        <input type="hidden" name="Students[@i].StudentId" value="@Model.Students[i].StudentId" />
                                        <input type="hidden" name="Students[@i].EnrollmentId" value="@Model.Students[i].EnrollmentId" />
                                        <input type="hidden" name="Students[@i].StudentCode" value="@Model.Students[i].StudentCode" />
                                        <input type="hidden" name="Students[@i].FullName" value="@Model.Students[i].FullName" />
                                        <input type="hidden" name="Students[@i].Email" value="@Model.Students[i].Email" />
                                        
                                        <input type="checkbox" 
                                               class="portal-checkbox attendance-checkbox" 
                                               name="Students[@i].IsPresent" 
                                               value="true"
                                               checked="@Model.Students[i].IsPresent"
                                               id="student_@i">
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3">
            <div class="summary-card">
                <h6 style="color: var(--portal-primary); margin-bottom: 1rem;">
                    <i class="bi bi-info-circle me-2"></i>Summary
                </h6>
                <div class="summary-row">
                    <span>Total Students</span>
                    <strong id="totalStudents">@Model.Students.Count</strong>
                </div>
                <div class="summary-row present">
                    <span><i class="bi bi-check-circle me-1"></i>Present</span>
                    <strong id="presentCount">@Model.Students.Count</strong>
                </div>
                <div class="summary-row absent">
                    <span><i class="bi bi-x-circle me-1"></i>Absent</span>
                    <strong id="absentCount">0</strong>
                </div>
                <hr style="margin: 1rem 0;">
                <div class="d-grid gap-2">
                    <button type="submit" class="portal-btn portal-btn-accent" style="width: 100%; justify-content: center;">
                        <i class="bi bi-save"></i> Save Attendance
                    </button>
                    <a asp-action="Index" class="portal-btn portal-btn-outline" style="width: 100%; justify-content: center;">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const checkAll = document.getElementById('checkAll');
        const checkboxes = document.querySelectorAll('.attendance-checkbox');
        const totalStudents = @Model.Students.Count;

        checkAll.addEventListener('change', function() {
            checkboxes.forEach(cb => cb.checked = this.checked);
            updateSummary();
        });

        checkboxes.forEach(cb => {
            cb.addEventListener('change', function() {
                updateSummary();
                checkAll.checked = Array.from(checkboxes).every(cb => cb.checked);
            });
        });

        function updateSummary() {
            const presentCount = Array.from(checkboxes).filter(cb => cb.checked).length;
            document.getElementById('presentCount').textContent = presentCount;
            document.getElementById('absentCount').textContent = totalStudents - presentCount;
        }
        
        updateSummary();
    });
</script>
}
