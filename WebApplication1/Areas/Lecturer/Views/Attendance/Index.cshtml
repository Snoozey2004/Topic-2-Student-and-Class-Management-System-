@model List<WebApplication1.ViewModels.AttendanceClassListViewModel>
@{
    ViewData["Title"] = "Attendance Management";
    ViewData["PageTitle"] = "Attendance Management";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    <li class="nav-item">
        <a class="nav-link" asp-area="Lecturer" asp-controller="Dashboard" asp-action="Index">
            <i class="bi bi-house-door me-2"></i>Home
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Lecturer" asp-controller="CourseClass" asp-action="Index">
            <i class="bi bi-journal-text me-2"></i>Course Classes
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Lecturer" asp-controller="Grade" asp-action="Index">
            <i class="bi bi-pencil-square me-2"></i>Manage Grades
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-area="Lecturer" asp-controller="Attendance" asp-action="Index">
            <i class="bi bi-clipboard-check me-2"></i>Attendance
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Lecturer" asp-controller="Schedule" asp-action="Index">
            <i class="bi bi-calendar3 me-2"></i>Teaching Schedule
        </a>
    </li>
}

<div class="card">
    <div class="card-header bg-white">
        <h5 class="mb-0"><i class="bi bi-clipboard-check me-2"></i>Select a Class for Attendance</h5>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Instructions:</strong> Select a class below to take attendance or view attendance history.
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var classItem in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm hover-card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="bi bi-journal-text text-primary me-2"></i>@classItem.ClassCode
                                </h5>
                                <h6 class="card-subtitle mb-3 text-muted">@classItem.SubjectName</h6>
                                
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar me-1"></i>@classItem.Semester
                                    </small>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-door-open me-1"></i>Room: @classItem.Room
                                    </small>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-people me-1"></i>Students: @classItem.TotalStudents
                                    </small>
                                </div>
                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="bi bi-list-check me-1"></i>Sessions: @classItem.TotalSessions
                                    </small>
                                </div>

                                @if (classItem.TotalSessions > 0)
                                {
                                    <div class="mb-3">
                                        <small class="text-muted d-block mb-1">Average Attendance Rate:</small>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar bg-success" role="progressbar" 
                                                 style="width: @classItem.AverageAttendanceRate.ToString("F1")%"
                                                 aria-valuenow="@classItem.AverageAttendanceRate" aria-valuemin="0" aria-valuemax="100">
                                                @classItem.AverageAttendanceRate.ToString("F1")%
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="card-footer bg-white border-top-0">
                                <div class="d-grid gap-2">
                                    <a asp-action="TakeAttendance" asp-route-id="@classItem.Id" class="btn btn-primary btn-sm">
                                        <i class="bi bi-clipboard-check me-1"></i>Take Attendance
                                    </a>
                                    <a asp-action="History" asp-route-id="@classItem.Id" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-clock-history me-1"></i>View History
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">
                <i class="bi bi-exclamation-triangle me-2"></i>
                You are not teaching any classes this semester.
            </div>
        }
    </div>
</div>

@section Styles {
<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
}
