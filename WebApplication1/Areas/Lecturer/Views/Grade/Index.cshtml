@model List<WebApplication1.ViewModels.CourseClassListViewModel>
@{
    ViewData["Title"] = "Manage Grades";
    ViewData["PageTitle"] = "Manage Grades - Select Class";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    <li class="nav-item">
        <a class="nav-link" asp-area="Lecturer" asp-controller="Dashboard" asp-action="Index">
            <i class="bi bi-house-door me-2"></i>Home
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Lecturer" asp-controller="CourseClass" asp-action="Index">
            <i class="bi bi-journal-text me-2"></i>Course Classes
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-area="Lecturer" asp-controller="Grade" asp-action="Index">
            <i class="bi bi-pencil-square me-2"></i>Manage Grades
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Lecturer" asp-controller="Attendance" asp-action="Index">
            <i class="bi bi-clipboard-check me-2"></i>Attendance
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Lecturer" asp-controller="Schedule" asp-action="Index">
            <i class="bi bi-calendar3 me-2"></i>Teaching Schedule
        </a>
    </li>
}

<div class="card">
    <div class="card-header bg-white">
        <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Select a Class to Manage Grades</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                Please select a class below to enter or update grades for students.
            </div>

            <div class="row g-3">
                @foreach (var courseClass in Model)
                {
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="card-title mb-1">@courseClass.SubjectName</h5>
                                        <span class="badge bg-primary">@courseClass.ClassCode</span>
                                        <span class="badge bg-secondary">@courseClass.Semester</span>
                                    </div>
                                    <span class="badge" style="background-color: @(courseClass.Status == "InProgress" ? "#10b981" : courseClass.Status == "Open" ? "#3b82f6" : "#6b7280")">
                                        @(courseClass.Status == "InProgress" ? "In Progress" : courseClass.Status == "Open" ? "Open" : "Completed")
                                    </span>
                                </div>
                                <div class="mb-3">
                                    <p class="mb-2"><i class="bi bi-code-square me-2"></i><strong>Subject Code:</strong> @courseClass.SubjectCode</p>
                                    <p class="mb-2"><i class="bi bi-door-open me-2"></i><strong>Room:</strong> @courseClass.Room</p>
                                    <p class="mb-0"><i class="bi bi-people me-2"></i><strong>Students:</strong> @courseClass.CurrentStudents/@courseClass.MaxStudents</p>
                                </div>
                                <div class="d-grid">
                                    <a asp-action="CourseClass" asp-route-id="@courseClass.Id" class="btn btn-primary">
                                        <i class="bi bi-pencil-square me-2"></i>Enter/Update Grades
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning mb-0">
                <i class="bi bi-exclamation-triangle me-2"></i>You have no course classes assigned. Please contact the administrator.
            </div>
        }
    </div>
</div>
