@model WebApplication1.ViewModels.ScheduleListViewModel
@{
    ViewData["Title"] = "Delete Schedule";
    ViewData["PageTitle"] = "Delete Schedule";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    @await Html.PartialAsync("_AdminSidebar")
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-crud.css" />
}

<a asp-action="Index" class="admin-back-link">
    <i class="bi bi-arrow-left"></i> Back to Schedule List
</a>

<div class="admin-card">
    <div class="admin-card-header">
        <h5><i class="bi bi-trash"></i> Delete Schedule</h5>
    </div>
    <div class="admin-card-body">
        <div class="admin-delete-warning">
            <i class="bi bi-exclamation-triangle" style="font-size: 1.25rem;"></i>
            <span>Are you sure you want to delete this schedule? This action cannot be undone.</span>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="admin-detail-row">
                    <div class="admin-detail-label">Class Code</div>
                    <div class="admin-detail-value">
                        <span class="badge-admin badge-admin-primary">@Model.ClassCode</span>
                    </div>
                </div>
                <div class="admin-detail-row">
                    <div class="admin-detail-label">Subject</div>
                    <div class="admin-detail-value">@Model.SubjectName</div>
                </div>
                <div class="admin-detail-row">
                    <div class="admin-detail-label">Day</div>
                    <div class="admin-detail-value">
                        <span class="badge-admin badge-admin-accent">@Model.DayOfWeek</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="admin-detail-row">
                    <div class="admin-detail-label">Period</div>
                    <div class="admin-detail-value">@Model.Period</div>
                </div>
                <div class="admin-detail-row">
                    <div class="admin-detail-label">Time</div>
                    <div class="admin-detail-value">@Model.TimeRange</div>
                </div>
                <div class="admin-detail-row">
                    <div class="admin-detail-label">Room</div>
                    <div class="admin-detail-value">@Model.Room</div>
                </div>
            </div>
        </div>

        <hr class="my-4">

        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn-admin-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn-admin-outline">Cancel</a>
            </div>
        </form>
    </div>
</div>
