@model WebApplication1.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_PublicLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account-forgotpassword.css" />
}

<div class="forgot-container">
    <div class="forgot-card">
        <!-- Logo Section -->
        <div class="logo-section">
            <div class="logo-icon">
                <i class="bi bi-mortarboard-fill"></i>
            </div>
            <div class="logo-text">
                <h3>SCMS</h3>
            </div>
        </div>
        
        <!-- Title -->
        <h2>Forgot Password</h2>
        <p class="subtitle">Enter your registered email to receive a password reset link</p>
        
        <!-- Form -->
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="email@scms.edu" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-reset">
                Send Reset Link <i class="bi bi-send ms-2"></i>
            </button>
            
            <a asp-action="Login" class="back-link">
                <i class="bi bi-arrow-left"></i>
                Back to login
            </a>
        </form>
        
        <!-- Help Text -->
        <div class="help-text">
            Need help? Contact <a href="mailto:support@scms.edu">support@scms.edu</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
